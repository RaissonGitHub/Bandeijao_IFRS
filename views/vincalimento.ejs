<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head')%>
</head>

<body>
    <header><%- include('../partials/header') %></header>
    <nav><%- include('../partials/nav') %></nav>

    <div class="container">
        <h1 class="curso-h1">Vincular Alimentos</h1>
        <hr class="curso-hr" />
        <div class="form-curso">
            <form action="filtrarAlimentosVinc" method="post">

                <div class="form-curso-content">
                    <div class="form-curso-filtro">
                        <label for="filtro" style="margin-left: 15px">Filtro:</label><br />
                        <input type="text" id="filtro" name = "filtro"/>
                        <button id="filtrar">Filtrar</button>
                    </div>
                </form>
                <form action="/vincalimentos" method="post" class="form-vincalimento-post">
                    <div class="form-curso-buttons">
                        <input type="submit" id="inserir" class="buttons" name="button" value="Adicionar Alimento" />
                        <input type="submit" id="excluir" class="buttons" name="button" value="Desvincular Alimento" />
                    </div>
                    <div class="javinc">
                        <span>Alimentos já vinculados:</span>
                        <ul style="list-style: none;">
                            <% cali.forEach((ca, index)=> { %>
                                <li><%= ca.nome %></li>
                            <%})%>
                        </ul>
                    </div>
                    <div class="form-curso-table">
                        <table id="curso-table-content">
                            <tr>
                                <th>Seleção</th>
                                <th>Nome</th>
                                <th>Unidade</th>
                                <th>Valor Nutricional</th>
                            </tr>

                            <% alimento.forEach((a, index)=> { %>
                                <tr>
                                    <td><input type="checkbox" name="checkbox" value="<%=a.id_alimento%>" /></td>

                                    <td>
                                        <%= a.nome %>
                                    </td>
                                    <td>
                                        <%= a.unidade %>
                                    </td>
                                    <td>
                                        <%= a.valor_nutricional %>
                                    </td>
                                </tr>
                                <% }) %>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <footer>
        <%- include('../partials/footer')%>
    </footer>
</body>

</html>