<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head')%>
</head>

<body>
    <header><%- include('../partials/header') %></header>
    <nav><%- include('../partials/nav') %></nav>

    <div class="container">
        <h1 class="pedido-h1">Pedidos</h1>
        <hr class="pedido-hr" />
        <div class="form-pedidos">
            <div class="form-pedidos-content">
                <form action="filtrarListaPedidos" method="post">
                    <div class="form-pedidos-filtro">
                        <label for="filtro" style="margin-left: 15px">Filtro:</label><br />
                        <input type="text" name="filtro" id="filtro" />
                        <button type="submit" id="filtrar">Filtrar</button>
                    </div>
                </form>
                <form action="/listapedido" method="post" class="form-pedidos-post">
                    <div class="form-pedidos-buttons">
                        <input type="submit" id="inserir" class="buttons" name="button" value="Novo Pedido" />
                        <input type="submit" id="atualizar" class="buttons" name="button" value="Atualizar Pedido" />
                        <input type="submit" id="excluir" class="buttons" name="button" value="Excluir Pedido" />
                    </div>
                    <div class="form-pedidos-table">
                        <table id="pedidos-table-content">
                            <tr>
                                <th>Seleção</th>
                                <th>N° Pedido</th>
                                <th>CPF usuário</th>
                                <th>Id Cardápio</th>
                                <th>Data emissão</th>
                                <th>OBS</th>
                                <th>Pagamento</th>
                                <th>ticket</th>
                            </tr>
                            <%pedido.forEach((p,index)=> { %>
                                <tr>
                                    <td><input type="radio" name="checkbox" value="<%=p.id_pedido%>" /></td>
                                    <td>
                                        <%= p.id_pedido %>
                                    </td>
                                    <td><%=p.usuario_cpf%></td>
                                    <td><%=p.cardapio_id_cardapio%></td>
                                    <td>
                                        <%= p.data_emissao.getDate() %>/
                                        <%= p.data_emissao.getMonth() + 1 %>/
                                        <%= p.data_emissao.getFullYear() %>
                                        <%= String(p.data_emissao.getHours()).padStart(2, '0' ) %>:
                                        <%=String(p.data_emissao.getMinutes()).padStart(2, '0' ) %>
                                        <%#Resultado experado 12 /12 /2023 00 :00%>
                                    </td>
                                    <td>
                                        <%=p.observacao%>
                                    </td>
                                    <td>
                                        <%= p.pagamento %>
                                    </td>
                                    <td><%= p.ticket %></td>
                                </tr>
                                <%})%>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <footer>
        <%- include('../partials/footer')%>
    </footer>
</body>

</html>