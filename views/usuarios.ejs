<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head')%>
</head>

<body>
    <header><%- include('../partials/header') %></header>
    <nav><%- include('../partials/nav') %></nav>

    <div class="container">
        <h1 class="usuario-h1">Usuários</h1>
        <hr class="usuario-hr" />
        <div class="form-usuario">
            <div class="form-usuario-content">
                <form action="filtrarUsuario" method="post">
                    <div class="form-usuario-filtro">
                        <label for="filtro" style="margin-left: 15px">Filtro:</label><br />
                        <input type="text" name="filtro" id="filtro" />
                        <button type="submit" id="filtrar">Filtrar</button>
                    </div>
                </form>
                <form action="/usuarios" method="post">
                    <div class="form-usuario-buttons">
                        <input type="submit" id="inserir" class="buttons" name="button" value="Novo Usuário" />
                        <input type="submit" id="atualizar" class="buttons" name="button" value="Atualizar Usuário" />
                        <input type="submit" id="excluir" class="buttons" name="button" value="Excluir Usuário" />
                    </div>
                    <div class="form-usuario-table">
                        <table id="usuario-table-content">
                            <tr>
                                <th>Seleção</th>
                                <th>CPF</th>
                                <th>Nome</th>
                                <th>Matrícula</th>
                                <th>Carac. Alimenticia</th>
                                <th>Curso</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th>Perfil</th>
                            </tr>
                            
                            <% usuario.forEach((u, index)=> { %>
                                <tr>
                                    <td><input type="radio" name="cpf" value="<%= u.cpf %>" /></td>

                                    <td>
                                        <%= u.cpf %>
                                    </td>
                                    <td>
                                        <%= u.nome %>
                                    </td>
                                    <td>
                                        <%= u.matricula %>
                                    </td>
                                   
                                    <td>
                                        <%= u.caracteristica_alimenticia %>
                                    </td>
                                    <td>
                                        <%=u.nome_curso%>
                                    </td>
                                    <td>
                                        <%= u.telefone %>
                                    </td>
                                    <td>
                                        <%= u.email %>
                                    </td>
                                    <td>
                                        <%=u.perfil%>
                                    </td>
                                    
                                </tr>
                                <% }) %>
                        </table>
                    </div>
                </div>
            </form>
        </div>        
    </div>
    <footer>
        <%- include('../partials/footer')%>
    </footer>
</body>

</html>