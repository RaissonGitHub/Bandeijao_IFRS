<body style="min-height: 0; justify-content: center; flex-direction: column;">
    <div class="login">
        <div class="login-header">
            <img src="img/logo2.png" alt="" style="width: 70%;">
          <h1>Login</h1>
        </div>
        <form action="/login" method="post">
			<div class="form-login-content">
				<input class="login-input" type="text" name="cpf" id="cpf" placeholder="CPF" />
				<input class="login-input" type="password" name="senha" id="senha" placeholder="Senha" />
				<input class="login-button-login" type="submit" value="Login" />
				<a class="login-criar-conta" href="/cadastro">Criar conta</a>
			</div>
		</form>
      <br>
    <br>
</body>

