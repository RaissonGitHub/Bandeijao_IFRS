<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <nav>
        <%- include('../partials/nav') %>
    </nav>

    <div class="container">
        <div class="refeicao-confirm">
            <form action="/realizarpedido" method="post">
            <div class="refeicao-confirm-content">
                <div class="refeicao-confirm-nome-tipo">
                    <h2>Cardapio <%=cardapio.id%></h2>
                    <span>Preço: R$ <%=cardapio.valor.toFixed(2)%></span>
                    <span>Tipo: <%=cardapio.tipo%></span>
                </div>
                <div class="refeicao-confirm-ingredientes">
                    <span>Itens:</span>
                    <div class="refeicao-confirm-itens">
                        <ul>
                            <%cardapio.alimentos.forEach((alimento)=>{%>
                                <li><%=alimento.nome%> - <%=alimento.unidade%>-<%=alimento.valorNutricional%></li>
							<%})%>
                        </ul>
                    </div>
                    <div>
                        <label for="observacao">Observação:</label> <br>
                        <textarea name="observacao" id="observacao" cols="30" rows="10"><%=restricoes%></textarea>
                        
                    </div>
                </div>

                <div class="refeicao-confirm-buttons">
                    <input class="refeicao-confirm-irpagamento"type="submit" value="Ir para pagamento">
                    <a class="refeicao-confirm-a" href="/cardapio">Cancelar</a>
                </div>
                </form>
            </div>
        </div>
    </div>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>