<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head')%>
</head>

<body>
    <header><%- include('../partials/header') %></header>
    <nav><%- include('../partials/nav') %></nav>

    <div class="container">
        <h1 class="pedido-h1">Restrições</h1>
        <hr class="pedido-hr" />
        <div class="form-pedidos">
            <div class="form-pedidos-content">
                <form action="filtrarRestricao" method="post">
                    <div class="form-pedidos-filtro">
                        <label for="filtro" style="margin-left: 15px">Filtro:</label><br />
                        <input type="text" name="filtro" id="filtro" />
                        <button type="submit" id="filtrar">Filtrar</button>
                    </div>
                </form>
                <form action="/listarestricoes" method="post" class="form-restricoes-post">
                    <div class="form-pedidos-buttons">
                        <input type="submit" id="inserir" class="buttons" name="button" value="Nova Restrição" />
                        <input type="submit" id="atualizar" class="buttons" name="button" value="Atualizar Restrição" />
                        <input type="submit" id="excluir" class="buttons" name="button" value="Excluir Restrição" />
                    </div>
                    <div class="form-pedidos-table">
                        <table id="pedidos-table-content">
                            <tr>
                                <th>Seleção</th>
                                <th>N° Restrição</th>
                                <th>Nome</th>
                            </tr>
                            <%restricao.forEach((r,index)=> { %>
                                <tr>
                                    <td><input type="radio" name="checkbox" value="<%=r.id_restricao%>" /></td>
                                    <td>
                                        <%= r.id_restricao %>
                                    </td>
                                    <td>
                                        <%= r.nome_restricao %>
                                    </td>
                                </tr>
                                <%})%>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <footer>
        <%- include('../partials/footer')%>
    </footer>
</body>

</html>