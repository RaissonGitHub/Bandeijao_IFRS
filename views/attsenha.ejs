<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <nav>
        <%- include('../partials/nav') %>
    </nav>

    <div class="container">
        <div class="attsenha-box">
            <div class="attsenha-content">
                <h2>Atualizar Senha:</h2>
                <hr>
                <div class="form-attsenha">
                    <form action="/attsenha" method="post">
                        <div class="form-attsenha-content">
                            <input type="password" name="oldsenha" id="oldsenha" required placeholder="Senha antiga:">
                            <input type="password" name="newsenha" id="newsenha" required placeholder="Nova Senha:">
                            <input type="password" name="rsenha" id="rsenha" required placeholder="Repita a Senha:">
                            <input type="submit" value="Login">
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>


    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>