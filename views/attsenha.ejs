<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <nav>
        <%- include('../partials/nav') %>
    </nav>

    <div class="container">
        <div class="attsenha-box">
            <div class="attsenha-content">
                <h2>Atualizar Senha:</h2>
                <div class="form-attsenha">
                    <form action="/attsenha" method="post">
                        <div class="form-attsenha-content">
                                <input class="form-attsenha-input"type="password" name="newsenha" id="newsenha" required placeholder="Nova Senha:">
                            <input class="form-attsenha-input" type="password" name="rsenha" id="rsenha" required placeholder="Repita a Senha:">
                            <input class="form-attsenha-button" type="submit" value="Atualizar">
                            <a href="/" class="form-attsenha-button">Voltar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>