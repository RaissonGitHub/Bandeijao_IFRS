<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <nav>
        <%- include('../partials/nav') %>
    </nav>

    <div class="container">
        <div class="feedback">
            <div class="feedback-content">
                <form action="/feedback" method="post">
                    <div class="form-feedback-content">
                        <label class="feedback-label" for="assunto">Assunto:</label>
                        <input class="feedback-input-text" type="text" name="assunto" id="assunto" required value="<%=m.assunto%>">
                        <label class="feedback-label" for="mensagem">Mensagem:</label>
                        <textarea class="feedback-input-textarea" name="mensagem" id="mensagem" cols="30" rows="10" ><%=m.mensagem%></textarea>
                        <div class="feedback-div-enviar">
                            <input class="feedback-enviar" name ="acao" type="submit" value="<%=acao%>">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer><%- include('../partials/footer') %></footer>
</body>

</html>