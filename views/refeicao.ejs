<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<%- include('../partials/head'); %>

	</head>

	<body>
		<header><%- include('../partials/header') %></header>
		<nav><%- include('../partials/nav') %></nav>

		<div class="container">
			<div class="refeicao">
				<form action="/refeicaoconfirm" class="refeicao-ingredientes">
					<div class="refeicao-content">
						<div class="refeicao-imagem">
							<img src="#" alt="" />
						</div>
						<div class="refeicao-nome-tipo">
							<h2>Prato</h2>
							<span>Tipo:<%=cardapio.tipo%></span>
						</div>
						<div class="refeicao-ingredientes-inputs">
							<span>Ingredientes:</span>

							<%cardapio.alimentos.forEach((alimento)=>{%>
								<span><%=alimento.nome%> - <%=alimento.unidade%>-<%=alimento.valorNutricional%></span>
							<%})%>
														
						</div>
						<div class="refeicao-descricao">
							<span>Descrição:</span>
							<p>
								<%=cardapio.descricao%>
							</p>
						</div>
						<div class="refeicao-card-preco">
							<div class="refeicao-card-preco-content">
								<h2>Pedido</h2>
								<h3>Prato</h3>
								<span>R$ <%=cardapio.valor.toFixed(2)%></span>
								<input type="submit" value="Fazer Pedido" />
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
		<footer><%- include('../partials/footer') %></footer>
	</body>
</html>
